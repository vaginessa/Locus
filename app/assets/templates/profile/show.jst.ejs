<div id= "profile-wrapper">
	
	<div id="user-wrapper">
		<div id="user-name">
			<%= user['user_fname']%> 
			<%= user['user_lname']%> 
		</div>

		<div id="collaborate-badge">C</div>
		<div id="c-pop-up" style="display: none">
			<% if(profile.get('ownprofile')){%>
				<div class="col pencil">✎</div>
			<%}%>
			<div id="collaborative-statement" ></div>
		</div>
	
		<% if(profile.get('ownprofile')){%>
			<div class="art pencil">✎</div>
			<div id='edit' style="display: none">edit</div>
		<%}%>
		
		<div id="artist-statement"></div>
	
	
		<% if (!profile.get('ownprofile')){ %>
			<% if(profile.get('follows')){ %>
				<div class="btn follow-btn" style="display: none">follow</div>
				<div class="btn unfollow-btn">unfollow</div>
			<% } else { %>
				<div class="btn follow-btn" style>follow</div>
				<div class="btn unfollow-btn" style="display: none">unfollow</div>
			<% } %>
		<% } %>
	
	
		

		<% if(profile.get('cover_piece') === null){ %>
			<div id="cover-piece-form">select a cover piece from below</div>
		<% } %>
	
	</div>
	
	
	<div id="cover-piece"></div>
	
	<div id="line"></div>
	
	<div id="own-gallery"></div>
</div>




